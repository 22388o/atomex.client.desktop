                    CornerRadius="5"
                    Margin="3 0 3 0"
                    HorizontalAlignment="Center">
                <TextBlock Foreground="White"
                           Text="{Binding State}"
                           FontSize="11"
                           Margin="5 3 5 3"
                           HorizontalAlignment="Center" />
            </Border>
        </DataTemplate>

