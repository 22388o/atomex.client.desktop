<Styles xmlns='https://github.com/avaloniaui'
        xmlns:x='http://schemas.microsoft.com/winfx/2006/xaml'>
    <Style Selector=".SelectCurrencyListBox ListBoxItem">
        <Setter Property="Padding" Value="0" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
    </Style>

    <Style Selector=".SelectCurrencyListBox ListBoxItem:pointerover Border#BottomLine">
        <Setter Property="IsVisible" Value="False" />
    </Style>
    <Style Selector=".SelectCurrencyListBox ListBoxItem:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource ListBoxItemPointeroverBrush}" />
    </Style>
    <Style Selector=".SelectCurrencyListBox ListBoxItem:pressed /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource LightDefaultOpacity4}" />
    </Style>
    <Style Selector=".SelectCurrencyListBox ListBoxItem:selected /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource ListBoxItemSelectedBrush}" />
    </Style>
    <Style Selector=".SelectCurrencyListBox ListBoxItem:selected Border#BottomLine">
        <Setter Property="IsVisible" Value="False" />
    </Style>
</Styles>