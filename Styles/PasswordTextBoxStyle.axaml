<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style Selector="TextBox.PasswordTextBox">
        <Setter Property="Padding" Value="50 0 0 0" />
        <Setter Property="FontSize" Value="20" />
    </Style>
        
    <Style Selector="TextBox.PasswordTextBox /template/ TextBlock#PART_Watermark, TextBox.PasswordTextBox /template/ TextBlock#PART_FloatingWatermark">
        <Setter Property="FontSize" Value="13" />
    </Style>
</Styles>