<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:Atomex.Client.Desktop"
             x:Class="Atomex.Client.Desktop.App">
    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="/Themes/blue.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

    <Application.Styles>
        <FluentTheme Mode="Light" />
        
        <StyleInclude Source="avares://AvaloniaProgressRing/Styles/ProgressRing.xaml"/>
        <StyleInclude Source="/Styles/MainWindowStyle.axaml" />
        <StyleInclude Source="/Styles/ChildViewStyle.axaml" />
        <StyleInclude Source="/Styles/DefaultButtonStyle.axaml" />
        <StyleInclude Source="/Styles/GenerateButtonStyle.axaml" />
        <StyleInclude Source="/Styles/IconButtonStyle.axaml" />
        <StyleInclude Source="/Styles/LinkButtonStyle.axaml" />
        <StyleInclude Source="/Styles/CustomComboBoxStyle.axaml" />
    </Application.Styles>
</Application>