<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:Atomex.Client.Desktop"
             x:Class="Atomex.Client.Desktop.App">
    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>
    
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="/Themes/blue.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

    <Application.Styles>
        <FluentTheme Mode="Light" />

        <StyleInclude Source="/Styles/DefaultButtonStyle.axaml"></StyleInclude>
        <StyleInclude Source="/Styles/GenerateButtonStyle.axaml" />
    </Application.Styles>
</Application>