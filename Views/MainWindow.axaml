<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Atomex.Client.Desktop.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Atomex.Client.Desktop.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="Atomex.Client.Desktop"
        Name="MainWindow"
        MinWidth="800"
        MinHeight="600">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <StackPanel>
        <TextBlock Text="{Binding Greeting}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button Command="{Binding ShowDialog}">Show Dialog</Button>
        <Button Command="{Binding ShowCustomDialog}">Show Dialog2</Button>
        <TextBox></TextBox>
    </StackPanel>

</Window>
